{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run application",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/build/msvc/Debug/bin/app.exe",
            "cwd": "${workspaceFolder}/out/build/msvc/Debug/bin",
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Builds the application"
        }
    ]
}