{
    "cmake.automaticReconfigure": false,
    "cmake.clearOutputBeforeBuild": false,
    "cmake.configureArgs": [
        "--graphviz=${workspaceFolder}/docs/graph/graph.dot",
        "--no-warn-unused-cli"
    ],
    "cmake.buildArgs": [
        "--verbose"
    ],
    "cmake.configureOnEdit": false,
    "cmake.loggingLevel": "info",
    "cmake.useCMakePresets": "always",
    "[cmake]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "josetr.cmake-language-support-vscode",
        "editor.quickSuggestions": {
            "strings": true
        }
    },
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "keep",
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": true
        }
    },
    "files.associations": {
        "memory": "cpp"
    },
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        },
        "bash (MSYS2)": {
            "path": "E:\\Software\\msys64\\usr\\bin\\bash.exe",
            "args": ["--login", "-i"],
            "env": { "CHERE_INVOKING": "1" }
        },
        "MSYS2 UCRT": {
            "path": "cmd.exe",
            "args": [
                "/c",
                "${env:msys_root}\\msys2_shell.cmd -defterm -here -no-start -ucrt64"
            ]
        }
    }
}