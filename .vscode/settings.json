{
    "cmake.configureArgs": [
        "--graphviz=${workspaceFolder}/docs/graph/graph.dot",
        "--no-warn-unused-cli"
    ],
    "cmake.allowUnsupportedPresetsVersions": true,
    "cmake.useCMakePresets": "always",
    "cmake.ctest.allowParallelJobs": true,
    "[cmake]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.defaultFormatter": "cheshirekow.cmake-format",
    },
    "cmakeFormat.args": [
        "--config-file",
        "${workspaceFolder}/.cmake-format.yaml"
    ],
    "files.associations": {
        "memory": "cpp"
    }
}