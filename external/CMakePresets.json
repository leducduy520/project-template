{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 27,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "PRESET": "${presetName}"
            }
        },
        {
            "name": "windows",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": {
                    "type": "FILEPATH",
                    "value": "g++.exe"
                },
                "CMAKE_C_COMPILER": {
                    "type": "FILEPATH",
                    "value": "gcc.exe"
                }
            }
        },
        {
            "name": "ubuntu",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_C_COMPILER": "gcc"
            }
        },
        {
            "name": "msvc",
            "inherits": "base",
            "generator": "Visual Studio 17 2022",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_C_COMPILER": "cl.exe"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows",
            "configurePreset": "windows",
            "jobs": 4,
            "verbose": true
        },
        {
            "name": "ubuntu",
            "configurePreset": "ubuntu",
            "inherits": "windows"
        },
        {
            "name": "msvc",
            "configurePreset": "msvc",
            "inherits": "windows"
        }
    ]
}