{
    "version": 6,
    "configurePresets": [
        {
            "name": "environment",
            "hidden": true,
            "environment": {
                "OUR_DIR_NAME": "out",
                "INSTALL_DIR_NAME": "install",
                "BUILD_DIR_NAME": "build",
                "DOC_DIR_NAME": "docs"
            }
        },
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/$env{OUR_DIR_NAME}/$env{BUILD_DIR_NAME}/${presetName}",
            "installDir": "${sourceDir}/$env{OUR_DIR_NAME}/$env{INSTALL_DIR_NAME}/${presetName}",
            "inherits": "environment",
            "cacheVariables": {
                "DOCS_DIR": {
                    "type": "PATH",
                    "value": "${sourceDir}/$env{DOC_DIR_NAME}"
                }
            }
        },
        {
            "name": "ubuntu",
            "inherits": "base",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "msvc",
            "displayName": "MSVC configuration",
            "inherits": "base",
            "generator": "Visual Studio 17 2022",
            "architecture":{
                "strategy": "set",
                "value": "x64"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "base",
            "configurePreset": "base",
            "hidden": true,
            "inheritConfigureEnvironment": true,
            "configuration": "Debug",
            "jobs": 6,
            "targets": "all"
        },
        {
            "name": "base-graphviz",
            "configurePreset": "base",
            "hidden": true,
            "inherits": "base",
            "targets": "gen_graph"
        },
        {
            "name": "base-document",
            "configurePreset": "base",
            "hidden": true,
            "inherits": "base",
            "targets": "gen_doc"
        },
        {
            "name": "base-format",
            "configurePreset": "base",
            "hidden": true,
            "inherits": "base",
            "targets": "run_cmake_format"
        },
        {
            "name": "base-install",
            "configurePreset": "base",
            "hidden": true,
            "inherits": "base",
            "targets": "install"
        },
        {
            "name": "base-complete",
            "configurePreset": "base",
            "hidden": true,
            "inherits": "base",
            "targets": [
                "all",
                "run_cmake_format",
                "install"
            ]
        },
        {
            "name": "ubuntu",
            "configurePreset": "ubuntu",
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "ubuntu-graphviz",
            "configurePreset": "ubuntu",
            "inherits": [
                "base-graphviz",
                "ubuntu"
            ]
        },
        {
            "name": "ubuntu-document",
            "configurePreset": "ubuntu",
            "inherits": [
                "base-document",
                "ubuntu"
            ]
        },
        {
            "name": "ubuntu-format",
            "configurePreset": "ubuntu",
            "inherits": [
                "base-format",
                "ubuntu"
            ]
        },
        {
            "name": "ubuntu-install",
            "configurePreset": "ubuntu",
            "inherits": [
                "base-install",
                "ubuntu"
            ]
        },
        {
            "name": "ubuntu-complete",
            "configurePreset": "ubuntu",
            "inherits": [
                "base-complete",
                "ubuntu"
            ]
        },
        {
            "name": "msvc",
            "configurePreset": "msvc",
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "targets": "ALL_BUILD",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "msvc-release",
            "configurePreset": "msvc",
            "inherits": "msvc",
            "configuration": "Release"
        },
        {
            "name": "msvc-debug",
            "configurePreset": "msvc",
            "inherits": "msvc",
            "configuration": "Debug"
        }
    ],
    "testPresets": [
        {
            "name": "base",
            "configurePreset": "base",
            "hidden": true,
            "output": {
                "verbosity": "verbose",
                "shortProgress": true,
                "labelSummary": true
            },
            "execution": {
                "jobs": 8
            }
        },
        {
            "name": "ubuntu",
            "configurePreset": "ubuntu",
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "msvc",
            "displayName": "Test msvc build",
            "configurePreset": "msvc",
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }
    ],
    "packagePresets": [
        {
            "name": "msvc",
            "configurePreset": "msvc"
        }
    ],
    "workflowPresets": [
        {
            "name": "ubuntu",
            "steps": [
                {
                    "type": "configure",
                    "name": "ubuntu"
                },
                {
                    "type": "build",
                    "name": "ubuntu-complete"
                },
                {
                    "type": "test",
                    "name": "ubuntu"
                }
            ]
        }
    ]
}
